" global setting
syntax on
scriptencoding utf-8
set t_Co=256
let mapleader=','
set nocompatible
set encoding=utf8
set modelines=0
set mouse=a
set clipboard=unnamed,autoselect

" display setting
set title
set ruler
set number
set showmatch
set cursorline

" edit setting
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" search setting
set ignorecase
set smartcase
set wrapscan
